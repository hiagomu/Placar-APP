<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PartidaActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="760dp"
        android:layout_height="323dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/fundo_partida_activity" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="658dp"
        android:layout_height="232dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/cronoTextView"
        app:srcCompat="@drawable/fundo_transparente" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="?android:attr/listDivider"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cronoTextView"
        style="@style/editText"
        android:layout_width="415dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time1TextView"
        style="@style/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/time2TextView"
        style="@style/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/gol1TextView"
        style="@style/editText"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/time1TextView" />

    <Button
        android:id="@+id/gol1Button"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:text="GOL"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/gol1TextView" />

    <TextView
        android:id="@+id/gol2TextView"
        style="@style/editText"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/time2TextView" />

    <Button
        android:id="@+id/gol2Button"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="12dp"
        android:text="GOL"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/gol2TextView" />

    <TextView
        android:id="@+id/falta1TextView"
        style="@style/editText"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/gol1TextView"
        app:layout_constraintTop_toBottomOf="@+id/time1TextView" />

    <Button
        android:id="@+id/falta1Button"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:text="Falta"
        app:layout_constraintStart_toEndOf="@+id/gol1Button"
        app:layout_constraintTop_toBottomOf="@+id/falta1TextView" />

    <TextView
        android:id="@+id/falta2TextView"
        style="@style/editText"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/gol2TextView"
        app:layout_constraintTop_toBottomOf="@+id/time2TextView" />

    <Button
        android:id="@+id/falta2Button"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="12dp"
        android:text="Falta"
        app:layout_constraintStart_toEndOf="@+id/gol2Button"
        app:layout_constraintTop_toBottomOf="@+id/falta2TextView" />

    <TextView
        android:id="@+id/passe1TextView"
        style="@style/editText"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/falta1TextView"
        app:layout_constraintTop_toBottomOf="@+id/time1TextView" />

    <Button
        android:id="@+id/passe1Button"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="Passes"
        app:layout_constraintStart_toEndOf="@+id/falta1Button"
        app:layout_constraintTop_toBottomOf="@+id/passe1TextView" />

    <TextView
        android:id="@+id/passe2TextView"
        style="@style/editText"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/falta2TextView"
        app:layout_constraintTop_toBottomOf="@+id/time2TextView" />

    <Button
        android:id="@+id/passe2Button"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="12dp"
        android:text="Passes"
        app:layout_constraintStart_toEndOf="@+id/falta2Button"
        app:layout_constraintTop_toBottomOf="@+id/passe2TextView" />

</androidx.constraintlayout.widget.ConstraintLayout>